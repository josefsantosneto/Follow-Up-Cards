<%- include("partials/header"); -%>


 <div class="container mw-100 mh-100 mainDiv">
    <!-- <div class="container-fluid  bg-transparent border-0 align-top"> -->
        <h1 class="counter">Projetos selecionados: <%=counter%></h1>
        <div class="row d-inline-table projectsfilter align-top">
            <div class="col" >
                <img src="/img/legend.png" alt="">
            </div>
        
            <div class="col">
                <div class="row">
                    <div class="col-2 d-flex justify-content-end">
                        <i class="fa-solid fa-filter d-inline"></i>
                    </div>
                    <div class="col">
                        <form action="/projetos" method="GET">
                            <input type="text" name="descprojeto" placeholder="Busca Por Palavra Chave" class="col-1 form-control bg-transparent w-70 justify-content-center" onChange="this.form.submit().preventDefault()">
                            <select id="status" name="status" class="form-control bg-transparent w-70 justify-content-center" onChange="this.form.submit().preventDefault()">
                                <% items.forEach(function(item){%>
                                    <option class="d-inline-table" value="<%=item.value %>"><%=item.selection%></option>
                                    
                                <%});%>
                            </select>
                            <select id="centrocusto" name="centrocusto" class="form-control bg-transparent w-70 justify-content-center" onChange="this.form.submit().preventDefault()">
                                    <option class="d-inline-table" value="" placeholder="Selecione o Centro de Custo">Selecione um Centro de Custo</option>
                                <% projsf.forEach(function(item){%>
                                    <option class="d-inline-table" value="<%=item._id %>"><%=item.centroCusto%></option>
                                    
                                <%});%>
                            </select>
                   
                        </form>
                        <div class="spinning">
                            <img class="img-spinning" src="/img/loading.gif" alt="">
                        </div>
                    </div>                   
                    
                </div>
            </div>

            </div>
        </form>
    <!-- </div> -->

    <% projs.forEach(function(project){ %>
        

        <a href="/projetos/<%=project._id%>">
            <div class=<%= project.colorStatus %> >
                <h3>
                    <%= project.nomeDoProjeto.substring(0,10) + "..."%>
                </h3>
                <h4>Etapa Atual: <%= project.setorAtual%></h4>
                <p>Centro de Custo: <%= project.centroCusto%></p>
                <p>Orgão: <%= project.orgao%></p>
                <p>Valor: <%= project.valor.toLocaleString("de-DE", {minimumFractionDigits: 2, maximumFractionDigits: 2}) %> </p>
                
                <p>Descrição: <%= project.descricao.substring(0,50) + "..."%></p>
            </div>
            </a>
        <% }); %>

        <a class="a" href="/home_menu">Voltar</a>
    </div>
    
    





<%- include("partials/footer"); -%>